---
const experiencia = [
  {
    rol: "Ingeniero de Performance",
    empresa: "Technology Solutions (partner Parasoft)",
    tiempo: "2023 - Actualidad",
    resumen: "Diseño, automatización y ejecución de pruebas de carga y performance. Estandarización de procesos, mentoring, integración de nuevas herramientas y automatizaciones personalizadas."
  },
  // Puedes agregar más
];
---

<section class="my-8">
  <h3 class="text-lg font-semibold text-blue-700 dark:text-blue-400 mb-3 tracking-wide">Experiencia</h3>
  <ul class="space-y-5">
    {experiencia.map(exp => (
      <li class="p-4 bg-gray-100 dark:bg-gray-800 rounded-xl shadow flex flex-col gap-1">
        <span class="text-base font-bold text-gray-900 dark:text-gray-100">{exp.rol} <span class="font-normal text-gray-500 dark:text-gray-300">@ {exp.empresa}</span></span>
        <span class="text-xs text-gray-600 dark:text-gray-400">{exp.tiempo}</span>
        <span class="text-sm text-gray-700 dark:text-gray-200">{exp.resumen}</span>
      </li>
    ))}
  </ul>
</section>
