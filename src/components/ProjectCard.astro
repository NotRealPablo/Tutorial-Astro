---
// Props esperados: title, description, date, author, authorImg, image
const { title, description, date, author, authorImg, image } = Astro.props;
---

<div class="relative rounded-2xl overflow-hidden shadow-lg group transition">
  <img src={image} alt={title} class="object-cover w-full h-72 group-hover:scale-105 transition-transform duration-300" />
  <div class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent"></div>
  <div class="absolute bottom-0 left-0 p-5 w-full">
    <div class="flex items-center gap-2 mb-2 text-sm text-gray-200">
      <span>{date}</span>
      <img src={authorImg} alt={author} class="w-7 h-7 rounded-full border-2 border-white object-cover" />
      <span class="font-medium">{author}</span>
    </div>
    <h3 class="text-lg font-bold text-white mb-1">{title}</h3>
    <p class="text-white/90 text-base font-semibold leading-tight">{description}</p>
  </div>
</div>
